<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        android:padding="@dimen/dim_5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_category_transport"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="bold"
                android:text="@string/txt_category_transport"
                android:textColor="@color/white"
                android:textSize="@dimen/tex_size_normal" />

            <LinearLayout
                android:layout_width="@dimen/divider_size"
                android:layout_height="fill_parent"
                android:background="@color/gray_boder" >
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnImg_AddTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_button_green"
                android:contentDescription="@string/desc"
                android:src="@drawable/ico_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_size"
            android:background="@color/gray_boder" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="@dimen/dim_10" >

            <TextView
                android:id="@+id/txt_transport_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:gravity="center"
                android:tag="bold"
                android:text="100000 USD"
                android:textColor="@color/white"
                android:textSize="@dimen/tex_size_xlarge" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>